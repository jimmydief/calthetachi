  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600,700" %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Alegreya:400,700" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="page-wrapper">
    <header>
      <div class="container">
        <div id="logo">
          <%= link_to root_path do %> <% end %>
        </div>
        
        <form id="search-bar" action="/news" method="get">
          <input type="text" name="query" placeholder="Search" tabindex="1">
          <button type="submit">Go</button>
        </form>
                
        <ul id="social">
          <li><%= link_to "Facebook", "https://www.facebook.com/CalThetaChi", :target => "_blank" %></li>
          <li><%= link_to "Twitter", "https://twitter.com/CalThetaChi", :target => "_blank" %></li>
          <li><%= link_to "LinkedIn", "http://www.linkedin.com/groups?gid=4940412", :target => "_blank" %></li>
        </ul>
      </div>
    </header>
    
    <nav>
      <ul class="container">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About Us", about_us_path %></li>
        <li><%= link_to "Rush", rush_path %></li>
        <li><%= link_to "Photos", photo_album_index_path %></li>
        <li><%= link_to "Active Members", "#" %></li>
        <li><%= link_to "Alumni", "#" %></li>
        <li><%= link_to "News", posts_path %></li>
        <li><%= link_to "Contact Us", contact_path %></li>
        <li><%= link_to "Apparel Store", "http://thetachi.bigcartel.com/", :target => "_blank" %></li>
        <li><%= link_to "Member Zone", "#" %></li>
      </ul>
    </nav>
    
    <div id="page-content">
      <div class="container">
  
        <%= yield %>
  
      </div> <!-- container -->
    </div> <!-- page-content -->
  </div> <!-- page-wrapper -->
  <footer>
    <div class="container">
      <p>All content copyright &copy; 2013 Theta Chi, Mu Chapter. All rights reserved.</p>
      <p>2499 Piedmont Avenue, Berkeley, California 94704</p>
      <%= link_to "http://www.jimmydief.com", :id => "designer-promo" do %> <% end %>
    </div>
  </footer>
</body>
</html>
