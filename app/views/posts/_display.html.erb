<div class="post">  
  <h3><%= post.title %></h3>
  <p class="meta">posted by <%= link_to post.member.display_name, member_path(post.member) %> on <%= post.display_created_date %></p>
  <p class="content"><%= post.text %></p>
  <p class="comments"><%= link_to pluralize(0, "comment"), "#" %></p>
</div>